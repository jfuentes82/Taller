            alternatingRowStyle: "webgrid-alternating-row",
            rowStyle: "webgrid-row-style",
 
            columns: grid.Columns
            (
                grid.Column("Nombre", header: "NOMBRE " + Helpers.WebGridSortHelper.SortDirection(null, ref grid, "Nombre")),
